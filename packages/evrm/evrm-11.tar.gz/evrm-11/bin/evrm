#!/usr/bin/env python3
#
#

""" Die medicijnen zijn gif en het toedienen ervan is stafbaar !! """

import sys, os
sys.path.insert(0, os.getcwd())

from evrm import __version__, __txt__

from mads.shell import reset

from mids import kernel

def main():
    kernel.cfg.name = "EVRM"
    kernel.cfg.version = __version__
    kernel.loading("evrm")
    kernel.main()

if __name__ == "__main__": 
    try:
        main()
    except KeyboardInterrupt:
        pass
    kernel.shutdown()
    reset()
    os._exit(0)
