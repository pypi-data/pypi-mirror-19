#!/usr/bin/env python3
#
#

""" Die medicijnen zijn gif en het toedienen ervan is stafbaar !! """

import sys, os
sys.path.insert(0, os.getcwd())

from evrm import __version__, __txt__

from mads.shell import shutdown, boot
from mads.input import Input 

from mids import console, kernel

def main():
    boot("EVRM", version=__version__, txt=__txt__)
    kernel.init("evrm")
    console.forever()

if __name__ == "__main__": 
    try: main()
    except KeyboardInterrupt:
        pass
    shutdown()
    os._exit(0)
