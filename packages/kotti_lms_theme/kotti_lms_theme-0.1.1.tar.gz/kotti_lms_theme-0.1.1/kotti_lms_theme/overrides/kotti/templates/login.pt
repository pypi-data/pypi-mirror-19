<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:define="page_slots api.slots;
                  dummy api.view_needed;
                  has_location_context api.is_location(context);"
      metal:define-macro="main">


<!-- Mirrored from webapplayers.com/inspinia_admin-v2.4/login.html by HTTrack Website Copier/3.x [XR&CO'2014], Tue, 16 Feb 2016 18:11:14 GMT -->
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>${api.site_title} | Login</title>

    <link rel="stylesheet" type="text/css" href="/fanstatic/kotti_lms_theme/ext/chartist/dist/chartist.min.css" />
    <link rel="stylesheet" type="text/css" href="/fanstatic/kotti_lms_theme/ext/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="/fanstatic/kotti_lms_theme/ext/select2/dist/css/select2.min.css" />
    <link rel="stylesheet" type="text/css" href="/fanstatic/kotti_lms_theme/front-styles.css" />
    <link rel="stylesheet" type="text/css" href="/fanstatic/kotti_lms_theme/styles.css" />
    <link rel="stylesheet" type="text/css" href="/fanstatic/bootstrap/css/bootstrap.css" />

    ${api.render_template('kotti:templates/icons.pt')}


    <link href="/fanstatic/kotti_lms_theme/css/animate.css" rel="stylesheet">
    <link href="/fanstatic/kotti_lms_theme/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>


              <div class="above-content"
                   tal:condition="has_location_context and page_slots.abovecontent"
                   tal:content="api.render_template('kotti:templates/render_content_slot.pt', slot=page_slots.abovecontent)">
              </div>
              <div tal:replace="api.render_template('kotti:templates/messages.pt')" />
            <div>

                <img alt="image" class="login-logo" src="/fanstatic/kotti_lms_theme/img/logo.png">

            </div>
            <h3>Welcome to ${api.site_title}</h3>
            <form  id="login-form" action="${url}" method="post" class="m-t" role="form" >
                <div class="form-group">
                    <input type="text" placeholder='Username' name="login" id="form-login" class="form-control" value="${login}" />
                </div>
                <div class="form-group">
                    <input type="password" placeholder='Password' name="password" id="form-password" class="form-control" value="${password}" />
                </div>
                <input type="hidden" name="came_from" value="${came_from}" />
                <button type="submit" name="submit" class="btn btn-primary block full-width m-b"
                        i18n:translate="">
                  Log in
                </button>
                <br>
                <a href="/@@request-password-reset">Forgot password?</a>
                <!--
                <p class="text-muted text-center"><small>Do not have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="register.html">Create an account</a> -->
            </form>
            <!-- <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p> -->
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="/fanstatic/kotti_lms_theme/js/jquery-2.1.1.js"></script>
    <script src="/fanstatic/kotti_lms_theme/js/bootstrap.min.js"></script>
    <div class="below-content"
       tal:condition="page_slots.belowcontent"
       tal:content="api.render_template('kotti:templates/render_content_slot.pt', slot=page_slots.belowcontent)">
    </div>
</body>


<!-- Mirrored from webapplayers.com/inspinia_admin-v2.4/login.html by HTTrack Website Copier/3.x [XR&CO'2014], Tue, 16 Feb 2016 18:11:14 GMT -->
</html>
