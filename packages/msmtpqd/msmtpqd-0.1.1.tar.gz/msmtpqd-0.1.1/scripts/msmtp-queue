"""Wrapper script for msmtp.

This is a small wrapper script that sits on top of msmtp and uses dbus to pass
messages to msmtpqd.
"""

import sys

import pydbus


def main():
    bus = pydbus.SessionBus()
    msmtpqd = bus.get('com.github.dcbaker.msmtpq.Message')
    msmtpqd.Send('msmtp {}'.format(' '.join(sys.argv[1:])), sys.stdin.read())


if __name__ == '__main__':
    main()
