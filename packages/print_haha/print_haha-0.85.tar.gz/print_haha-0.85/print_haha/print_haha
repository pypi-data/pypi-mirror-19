#!/usr/bin/env python

import sys
import os
from pkg_resources import resource_filename

path =  os.path.abspath(resource_filename('print_haha.data', 'data_file.dat'))
print path 

if(sys.argv[1] == 'w'):
    f = open(path, 'w')
    new_data = raw_input('give some data:')
    f.write(new_data)



f = open (path , 'r')

for line in f:
    print line

print 'hahaha'
