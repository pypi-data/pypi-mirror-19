#! /usr/bin/env python
# -*- coding: utf-8 -*-
"""

This program scans for connected instruments on the specified GPIB board.
(currently only for linux-gpib on Linux)

"""

import sys
from pymanip.miscellaneous import scanGpib

def main(board):
    scanGpib(board)

if __name__ == '__main__':
    from argparse import ArgumentParser
    parser = ArgumentParser(description=__doc__)
    parser.add_argument('boardNumber', 
            help="GPIB board to scan for connected instruments", 
            metavar="board_number", type=int, default=0, nargs='?')
    args = parser.parse_args()
    board = int(args.boardNumber)        
    main(board)
        
    
